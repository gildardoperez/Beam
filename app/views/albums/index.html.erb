<% if @albums != [] %>
	<% @albums.each do |album| %>
		<div class="row">
				<div class="albname col-md-2"><p class="a_title"><%= album.title.upcase %></p></div>
				<div class="col-md-8" id="middle_col">
					<a href="<%= album_url(album) %>">
						<% album.images[4..-1].each do |image| %>
						<%= image_tag image.ig_url, :class => "thumb" %>
						<% end %>
					</a>
				</div>
				<div class="col-md-2"><%= link_to '', album, method: :delete, data: { confirm: 'Are you sure?'}, :class => "glyphicon glyphicon-trash trash" %></div>
		</div>
	<% end %>
<% end %>
