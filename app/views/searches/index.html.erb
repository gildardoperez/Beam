
<%= form_tag searches_path, :method => "get" do %>
	<%=text_field_tag :search, params[:search], :placeholder => 'Search for a hashtag'%>
	<%= submit_tag "Search", :name => nil %>
<% end %>

<!-- Instagram user login -->
<%= link_to (session[:access_token] ? 'Logged in as ' + @user.username : 'Login with Instagram'), controller: 'sessions', action: 'connect' %><br>

<!-- store next_url for jQuery -->
<script>
	var next_url = "<%= @next_url %>";
</script>

<!-- Display images from search result -->
<% if @instagram_results != [] && @instagram_results != nil %>
	<button id="fullscreen">Fullscreen</button>
	<button id="reload">Reload</button>
	<div class="scrollbar">
	    <div class="handle"></div>
	</div>
	<div class="frame">
	    <ul class="slidee">
			<% @instagram_results.each do |result| %>
				<li>
					<%#= result.to_json %>
					<img src='<%= result.images.standard_resolution.url %>' class='main_image'>
					<!-- <div class="orbit-caption">
						<img src='<%#= result.user.profile_picture %>' height='30px' width='30px'>
						<strong><%#= result.user.username %></strong>
						<%#= result.caption.text if result.caption %>
						Posted <%#= distance_of_time_in_words(Time.now, Time.at(result.created_time.to_i),include_seconds: true) %> ago.
					</div> -->
				</li>
			<% end %>
		</ul>
	</div>
<% end %>

